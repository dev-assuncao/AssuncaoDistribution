@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocurred an error" : Model.Title;
}


@{ 
    if (Model == null)
            {
                <div>
                    <h2> Sorry! An error ocurred in the page. Our team will be warned and solve coming soon</h2>
                </div>
            }
            else
            {
                <h1>@Html.Raw(Model.Title)</h1>
                <h2 class="text-danger">@Html.Raw(Model.Message) </h2>
            }
}